<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("BANK", "Index", "Home")</p>
            </div>
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
                <nav>
                    <ul id="menu">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("Widok konta", "Index", "Start")</li>
                            <li>@Html.ActionLink("Historia", "Index", "Historia")</li>
                            <li>@Html.ActionLink("Przelewy", "Index", "Przelewy")</li>
                            <li>@Html.ActionLink("Lokaty", "Index", "Lokaty")</li>
                            <li>@Html.ActionLink("Pomoc", "Pomoc", "Pomoc")</li>
                            <li>@Html.ActionLink("Kontakt", "Kontakt", "Pomoc")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Start", "Index", "Home")</li>
                            <li>@Html.ActionLink("Pomoc", "Pomoc", "Pomoc")</li>
                            <li>@Html.ActionLink("Kontakt", "Kontakt", "Pomoc")</li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
